pipeline{
    agent any
    environment {
        NEXUS_VERSION = "nexus3"
        NEXUS_PROTOCOL = "http"
        NEXUS_URL = "nexus:8081"
        NEXUS_REPOSITORY = "maven-snapshots"
        NEXUS_CREDENTIAL_ID = "nexus-credentials"
    }
    stages {
        stage("build") {
            steps {
                echo 'pulling and running'
                script {
                    docker.image('maven:3.8.1-openjdk-8').run(['--network jenkins -p 8082:8080',
                        'curl -o petclinic.jar -L -X GET "http://nexus:8081/service/rest/v1/search/assets/download?sort=version&repository=maven-snapshots&maven.groupId=org.springframework.samples&maven.artifactId=spring-petclinic&maven.extension=jar" \
                        java -jar *.jar'
                    ])
                }
            }
        }

    }
}
